<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#983567">


    <FrameLayout
        android:id="@+id/concern_layout"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:background="#a90">

        <ImageView
            android:id="@+id/concern_finish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_video_add_friends_finish"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/concern"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_video_add_friends" />
    </FrameLayout>

    <Button
        android:id="@+id/anim_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动画"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>